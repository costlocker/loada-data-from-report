{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "**/*.ts", "generated/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
